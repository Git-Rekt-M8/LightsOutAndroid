<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="432dp"
    android:layout_height="368dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/dialog_box_blank"
    tools:context="com.koalition.edu.lightsout.DifficultySelectionActivity"
    android:id="@+id/difficultyLayout"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/close_btn"
        android:layout_gravity="right"
        />

    <TextView
        android:id="@+id/iv_easyDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:textSize="42sp"
        android:textColor="#0d00fe"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/iv_mediumDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:textSize="42sp"
        android:textColor="#d50ba2"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/iv_hardDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insane"
        android:textSize="42sp"
        android:textColor="#e80509"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:layout_gravity="center" />


</LinearLayout>
