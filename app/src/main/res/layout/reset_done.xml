<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/dialog_box_blank"
    android:layout_width="432dp"
    android:layout_height="368dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.koalition.edu.lightsout.SettingsDialogActivity"
    android:id="@+id/resetDoneLayout">

    <ImageView
        android:id="@+id/iv_close_reset_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/close_btn"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your progress has been reset :("
        android:layout_gravity="center"
        android:textSize="30sp"
        android:paddingLeft="40dp"
        android:paddingTop="30dp"
        android:id="@+id/tv_reset_done"/>

</LinearLayout>