<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.koalition.edu.lightsout.SettingsDialogActivity"
    android:layout_width="432dp"
    android:layout_height="368dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/dialog_box_blank"
    android:orientation="vertical"
    android:id="@+id/settingsLayout">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/close_btn"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:id="@+id/shopitem_textview"
            android:gravity="center"
            android:textColor="#f7f7f9"
            android:textSize="40sp"
            android:text="ShopItemTitle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/shopitem_imageview"
                android:src="@drawable/freezeshopicon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="13dp"
                android:id="@+id/description_textview"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:text="Avoid those electric bills and hold on to your money for a short amount of time!"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:id="@+id/currentlyowned_textview"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Owned: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:id="@+id/currentlyowned_num_textview"
                android:gravity="center"
                android:textSize="20sp"
                android:text="5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buy_button"
                android:gravity="center_horizontal"
                android:background="@drawable/buy_btn_selector"/>
        </LinearLayout>

    </LinearLayout>





</LinearLayout>