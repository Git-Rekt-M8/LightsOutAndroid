<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="432dp"
    android:layout_height="368dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/dialog_box_blank"
    tools:context="com.koalition.edu.lightsout.SettingsDialogActivity"
    android:orientation="vertical"
    android:id="@+id/settingsLayout">
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/close_btn"
        android:layout_gravity="right"/>

    <TextView
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/tv_settings"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_gravity="center"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/tv_music"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingRight="10dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_music_status"
        android:src="@drawable/setting_check"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound FX"
            android:id="@+id/tv_sound_fx"
            android:textColor="#000000"
            android:textSize="25sp"
            android:paddingRight="10dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_sound_fx_status"
            android:src="@drawable/setting_check"/>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:id="@+id/tv_credits"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Progress"
        android:id="@+id/tv_reset_progress"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_gravity="center"/>



</LinearLayout>
