<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/dialog_box_blank"
    android:layout_width="432dp"
    android:layout_height="368dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.koalition.edu.lightsout.SettingsDialogActivity"
    android:id="@+id/resetLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to reset all your progress?"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:paddingLeft="40dp"
        android:paddingTop="30dp"
        android:id="@+id/tv_reset_question"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Cancel"
            android:textColor="#0051ff"
            android:paddingBottom="40dp"
            android:textSize="30sp"
            android:layout_gravity="left|bottom"
            android:id="@+id/tv_reset_question_cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Reset"
            android:textColor="#ff0000"
            android:paddingLeft="85dp"
            android:paddingBottom="40dp"
            android:textSize="30sp"
            android:layout_gravity="right|bottom"
            android:id="@+id/tv_reset_question_reset"/>

    </LinearLayout>
</LinearLayout>